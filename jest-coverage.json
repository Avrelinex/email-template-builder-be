{
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": ["src", "test"],
  "testEnvironment": "node",
  "testRegex": ".*\\..*spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "dist",
    "coverage",
    "src/main.ts"
  ],
  "coverageDirectory": "./coverage"
}
